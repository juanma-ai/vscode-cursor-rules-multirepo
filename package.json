{
  "name": "cursor-rules-downloader",
  "displayName": "Cursor Rules Downloader",
  "description": "An extension for Cursor and VSCode that lets you pull .cursor/rules files from a set of repositories",
  "version": "1.0.6",
  "author": {
    "name": "juanmaguitar",
    "url": "https://github.com/juanmaguitar"
  },
  "publisher": "juanmaguitar",
  "icon": "images/icon.png",
  "contributors": [
    {
      "name": "BeilunYang",
      "url": "https://github.com/beilunyang"
    }
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorRules.addRule",
        "title": "Cursor Rules Multirepo: Add .cursor/rules"
      }
    ],
    "configuration": {
      "id": "configurationCursorRules",
      "title": "Cursor Rules",
      "properties": {
        "cursorRules.repos": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://github.com/PatrickJS/awesome-cursorrules/tree/main/rules"
          ],
          "description": "List of GitHub API URLs to fetch cursor rules from. Rules will be displayed in the same order as repositories are listed."
        },
        "cursorRules.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for API access"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "mocha -r ts-node/register -r ./src/test/mocha-setup.ts ./src/test/unit/**/*.test.ts",
    "test:debug": "SHOW_LOGS=true mocha -r ts-node/register -r ./src/test/mocha-setup.ts ./src/test/unit/**/*.test.ts",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "clean": "rm -rf out",
    "build": "tsc -p ./",
    "build-clean": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/chai": "^4.3.20",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^22.10.1",
    "@types/sinon": "^10.0.20",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "chai": "^4.5.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "mock-fs": "^5.5.0",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@types/debug": "^4.1.12",
    "axios": "^0.24.0",
    "debug": "^4.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juanma-ai/vscode-cursor-rules-multirepo.git"
  },
  "__metadata": {
    "size": 96770952
  }
}
